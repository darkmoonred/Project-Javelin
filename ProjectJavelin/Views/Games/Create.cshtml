@model ProjectJavelin.Models.Gamertag

@{
    ViewData["Title"] = "Submit Match";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Submit Match</h1>

<h4>Enter Gamertag</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GamertagName" class="control-label"></label>
                <input asp-for="GamertagName" class="form-control" />
                <span asp-validation-for="GamertagName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Latest Game" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}